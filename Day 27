class TestDataEmptyArray {
public:
    static vector<int> get_array() {
        return {}; // empty vector
    }
};

class TestDataUniqueValues {
public:
    static vector<int> get_array() {
        // Must contain at least two elements, all unique
        return {3, 1, 4, 2};
    }

    static int get_expected_result() {
        // Index of minimum element (value 1 at index 1)
        return 1;
    }
};

class TestDataExactlyTwoDifferentMinimums {
public:
    static vector<int> get_array() {
        // Must contain exactly two minimums
        return {5, 1, 2, 1, 3};
    }

    static int get_expected_result() {
        // Index of first minimum (value 1 at index 1)
        return 1;
    }
};
